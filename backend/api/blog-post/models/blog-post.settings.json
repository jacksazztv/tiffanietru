{
  "kind": "collectionType",
  "collectionName": "blog_posts",
  "info": {
    "name": "Blog Post"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": false
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "excerpt": {
      "type": "string",
      "required": false
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "Published",
        "Draft",
        "Archived"
      ],
      "default": "Published"
    },
    "tags": {
      "via": "blog_posts",
      "collection": "tag"
    }
  }
}
