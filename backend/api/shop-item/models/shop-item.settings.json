{
  "kind": "collectionType",
  "collectionName": "shop_items",
  "info": {
    "name": "Shop Item"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "price": {
      "type": "biginteger",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "Digital",
        "Physical",
        "TarotReading"
      ],
      "default": "Digital",
      "required": true
    },
    "portfolios": {
      "collection": "portfolio",
      "private": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "excerpt": {
      "type": "string"
    }
  }
}
